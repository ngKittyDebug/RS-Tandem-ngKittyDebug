{
  "name": "backend",
  "version": "0.0.1",
  "description": "",
  "author": "",
  "private": true,
  "license": "UNLICENSED",
  "scripts": {
    "build": "nest build",
    "format": "prettier --write \"src/**/*.ts\" \"test/**/*.ts\"",
    "ci:format": "prettier --check \"src/**/*.ts\" \"test/**/*.ts\"",
    "start": "nest start",
    "typecheck": "tsc --noEmit",
    "start:dev": "cross-env MODE=development nest start --watch",
    "start:debug": "nest start --debug --watch",
    "start:prod": "node dist/main",
    "lint": "eslint \"{src,apps,libs,test}/**/*.ts\" --fix",
    "ci:lint": "eslint \"{src,apps,libs,test}/**/*.ts\"",
    "test": "jest",
    "test:watch": "jest --watch",
    "test:cov": "jest --coverage",
    "test:debug": "node --inspect-brk -r tsconfig-paths/register -r ts-node/register node_modules/.bin/jest --runInBand",
    "test:e2e": "jest --config ./test/jest-e2e.json",
    "db:push": "npx prisma db push",
    "db:push:dev": "cross-env MODE=development npx prisma db push",
    "migration:dev": "cross-env MODE=development npx prisma migrate dev",
    "migration": "npx prisma migrate dev",
    "generate:dev": "cross-env MODE=development npx prisma generate",
    "check-all": "npm run ci:format && npm run typecheck && npm run ci:lint && npm run test",
    "docker:dev": "docker-compose up -d",
    "prepare": "cd .. && husky backend/.husky"
  },
  "dependencies": {
    "@nestjs/common": "^11.0.1",
    "@nestjs/config": "^4.0.3",
    "@nestjs/core": "^11.0.1",
    "@nestjs/mapped-types": "*",
    "@nestjs/platform-express": "^11.0.1",
    "@nestjs/swagger": "^11.2.6",
    "@prisma/adapter-pg": "^7.4.1",
    "@prisma/client": "^7.4.1",
    "class-transformer": "^0.5.1",
    "class-validator": "^0.14.4",
    "reflect-metadata": "^0.2.2",
    "rxjs": "^7.8.1"
  },
  "validate-branch-name": {
    "pattern": "^(chore|feat|fix|docs|style|refactor|perf)\\/BACKEND_[a-zA-Z0-9-]+_[a-zA-Z0-9-]+$",
    "errorMsg": "Branch name is invalid."
  },
  "devDependencies": {
    "@commitlint/cli": "^20.4.2",
    "@commitlint/config-conventional": "^20.4.2",
    "@eslint/eslintrc": "^3.2.0",
    "@eslint/js": "^9.18.0",
    "@nestjs/cli": "^11.0.0",
    "@nestjs/schematics": "^11.0.0",
    "@nestjs/testing": "^11.0.1",
    "@types/express": "^5.0.0",
    "@types/jest": "^30.0.0",
    "@types/node": "^22.10.7",
    "@types/pg": "^8.16.0",
    "@types/supertest": "^6.0.2",
    "cross-env": "^10.1.0",
    "dotenv": "^17.3.1",
    "eslint": "^9.18.0",
    "eslint-config-prettier": "^10.0.1",
    "eslint-plugin-prettier": "^5.2.2",
    "globals": "^16.0.0",
    "husky": "^9.1.7",
    "jest": "^30.0.0",
    "jest-mock-extended": "^4.0.0",
    "lint-staged": "^16.2.7",
    "prettier": "^3.4.2",
    "prisma": "^7.4.1",
    "source-map-support": "^0.5.21",
    "supertest": "^7.0.0",
    "ts-jest": "^29.2.5",
    "ts-loader": "^9.5.2",
    "ts-node": "^10.9.2",
    "tsconfig-paths": "^4.2.0",
    "typescript": "^5.7.3",
    "typescript-eslint": "^8.20.0"
  },
  "jest": {
    "moduleFileExtensions": [
      "js",
      "json",
      "ts"
    ],
    "rootDir": "src",
    "testRegex": ".*\\.spec\\.ts$",
    "transform": {
      "^.+\\.(t|j)s$": "ts-jest"
    },
    "collectCoverageFrom": [
      "**/*.(t|j)s",
      "!**/generated/**",
      "!**/*.spec.ts"
    ],
    "coverageDirectory": "../coverage",
    "testEnvironment": "node",
    "moduleNameMapper": {
      "^prisma/(.*)$": "<rootDir>/../prisma/$1",
      "^src/(.*)$": "<rootDir>/$1",
      "^src_generated/prisma/client$": "<rootDir>/../src/generated/prisma/client"
    },
    "transformIgnorePatterns": [
      "/node_modules/(?!(@prisma|prisma)/)"
    ],
    "coveragePathIgnorePatterns": [
      "/node_modules/",
      "/test/",
      "/generated/"
    ]
  }
}
